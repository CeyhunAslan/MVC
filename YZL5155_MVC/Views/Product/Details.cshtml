@model YZL5155_MVC.Models.VMs.ProductDetailsVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.Name Details</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tiles</th>
                                <th>Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Id</td>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Create date</td>
                                <td>@Model.CreateDate</td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td>@Model.Status</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <td>Price</td>
                                <td>@Model.Price</td>
                            </tr>
                            <tr>
                                <td>Stock</td>
                                <td>@Model.Stock</td>
                            </tr>
                            <tr>
                                <td>Category Name</td>
                                <td>@Model.CategoryName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

